{
  "name": "use-draggable",
  "version": "0.0.0-development",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/idanen/react-draggable.git"
  },
  "scripts": {
    "dev": "vite",
    "lint": "eslint .",
    "preview": "vite preview",
    "start": "vite",
    "test": "is-ci-cli test:ci test:watch",
    "test:watch": "vitest",
    "test:ci": "vitest run",
    "eject": "react-scripts eject",
    "prebuild": "rimraf dist",
    "build": "NODE_ENV=production tsc -b && vite build src/lib",
    "commit": "git-cz",
    "presemantic-release": "npm test && npm run build",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/react": "18",
    "@types/react-dom": "18",
    "@vitejs/plugin-react": "^4.4.1",
    "@vitest/browser": "^3.1.1",
    "@vitest/coverage-v8": "3.1.1",
    "@vitest/ui": "^3.1.1",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "is-ci": "^4.1.0",
    "is-ci-cli": "^2.2.0",
    "playwright": "^1.52.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.2.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.2",
    "vitest": "^3.1.1",
    "vitest-browser-react": "^0.1.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "release": {
    "repositoryUrl": "https://github.com/idanen/react-draggable.git",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/git",
      "@semantic-release/npm",
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "dist/index.js",
              "label": "JS distribution"
            }
          ]
        }
      ]
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
