{
  "name": "use-draggable",
  "version": "0.0.0-development",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/idanen/react-draggable.git"
  },
  "scripts": {
    "start": "react-scripts start",
    "build-examples": "react-scripts build",
    "test": "karma start --browsers ChromeHeadless karma.conf.js --single-run",
    "test:watch": "karma start --browsers ChromeHeadless karma.conf.js",
    "eject": "react-scripts eject",
    "prebuild": "rimraf dist",
    "build": "NODE_ENV=production babel src/lib --out-dir dist --copy-files --ignore __tests__,spec.js,test.js,__snapshots__",
    "commit": "git-cz",
    "presemantic-release": "npm test && npm run build",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.0",
    "@babel/core": "^7.6.0",
    "@babel/preset-env": "^7.6.0",
    "@babel/preset-react": "^7.0.0",
    "@semantic-release/changelog": "^3.0.4",
    "@semantic-release/git": "^7.0.16",
    "@semantic-release/github": "^5.4.3",
    "@testing-library/react": "^9.1.4",
    "chai": "^4.2.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.0.2",
    "karma": "^6.3.16",
    "karma-babel-preprocessor": "^8.0.1",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-mocha": "^2.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "karma-requirejs": "^1.1.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^4.0.2",
    "mocha": "^6.2.3",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-scripts": "^3.3.0",
    "requirejs": "^2.3.6",
    "rimraf": "^3.0.0",
    "semantic-release": "^19.0.3",
    "webpack": "4.41.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "release": {
    "repositoryUrl": "https://github.com/idanen/react-draggable.git",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/git",
      "@semantic-release/npm",
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "dist/index.js",
              "label": "JS distribution"
            }
          ]
        }
      ]
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
